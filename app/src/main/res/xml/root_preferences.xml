<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/tracker_header">

        <EditTextPreference
            app:key="tracker_name"
            app:title="@string/tracker_name_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/storage_header">

        <SwitchPreferenceCompat
            app:key="storage"
            app:title="@string/storage_title"
            app:summary="@string/storage_summary"/>

    </PreferenceCategory>

</PreferenceScreen>